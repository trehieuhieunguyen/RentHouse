@model RentHouse.Models.RoomHouse

@{
    ViewData["Title"] = "DetailRoom";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
}

<h1>DetailRoom</h1>
<div class="container bootdey">
<div class="col-md-12">
<section class="panel">
      <div class="panel-body">
          <div class="col-md-6">
              <div class="pro-img-details">
                  <img src="/img/@Model.UrlImg" alt="">
              </div>
              
          </div>
          <div class="col-md-6">
              <h4 class="pro-d-title">
                  <a href="#" class="">
                      Leopard Shirt Dress
                  </a>
              </h4>
              <p>
                  @Model.house.NameHourse
              </p>
              <div class="product_meta">
                  <span class="posted_in"> <strong>Where:</strong> <a rel="tag" href="#">@Model.house.City</a>, <a rel="tag" href="#">@Model.house.District</a>></span>
                  <span class="tagged_as"><strong>Ward:</strong> <a rel="tag" href="#">@Model.house.Ward</a></span>
              </div>
              <div class="m-bot15"> <strong>Price : </strong> <span class="amount-old">@Model.PriceRent</span>  <span class="pro-price"> @Model.PriceRent</span></div>
              <div class="form-group">
                  <label>Quantity</label>
                  <input type="quantiy" placeholder="1" class="form-control quantity">
              </div>
              <p>
                   <form asp-area="User" asp-controller="Payment" asp-action="PaypalCheckout" asp-route-id="@Model.Id">
                            <input type="submit" value="PayPal"  class="btn btn-danger" />
                   </form>
              </p>
          </div>
      </div>
  </section>
  </div>
  </div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
