                <input asp-for="FirtsName" class="form-control" />
                <span asp-validation-for="FirtsName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordHash" class="control-label"></label>
                <input type="password" asp-for="PasswordHash" class="form-control" />
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ward" class="control-label"></label>
                <input asp-for="Ward" class="form-control" />
                <span asp-validation-for="Ward" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input  type="hidden" id="value_shipping_provinces" asp-for="City" class="form-control" />
               
                <select asp-for="City" name="calc_shipping_provinces" id="shipping_provinces"  onChange="update1()">
                  <option value=""  class="form-control" selected="selected">Tỉnh / Thành phố</option>
                </select>
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="District" class="control-label"></label>
                <input  type="hidden" id="value_shipping_district" asp-for="District" class="form-control" />
                <select asp-for="District" name="calc_shipping_district" id="shipping_district"  onChange="update2()">
                  <option value="" class="form-control" selected="selected">Quận / Huyện</option>
                </select>
                <span asp-validation-for="District" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">LockUser</label>
                <input type="hidden" id="lockuser" name="lockuser" class="form-control"/>
                <select id="selectlockuser" onchange="update4()">
                    <option value="0Day">Day Lock</option>
                    <option value="3Day">3Day</option>
                    <option value="1Week">1Week</option> 
                    <option value="Forever">Forever</option>
                    <option value="UnLock">UnLock</option>
                </select>
            </div>
            <div class="form-group">
            <label class="control-label">RoleUser</label>
            <input type="hidden" id="roleofuser" name="roleofuser" class="form-control"/>
            <select id="selectRole" onchange="update3()">
                    <option value="User">User</option>
                    <option value="ManagerUser">ManagerUser</option>         
            </select>
             </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

