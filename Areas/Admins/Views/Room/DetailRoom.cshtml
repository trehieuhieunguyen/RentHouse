@model RentHouse.Models.ViewModel.RoomVM

@{
    ViewData["Title"] = "DetailHouse";
    Layout = "~/Areas/Admins/Views/Shared/_Layout.cshtml";
}

<h1>DetailHouse</h1>

<div>
    <h4>House</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.roomHouse.HouseId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.roomHouse.HouseId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.roomHouse.RoomNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.roomHouse.RoomNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.roomHouse.RoomSize)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.roomHouse.RoomSize)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.roomHouse.Windowns)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.roomHouse.Windowns)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.roomHouse.PriceRent)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.roomHouse.PriceRent)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.roomHouse.UrlImg)
        </dt>
        <dd class = "col-sm-10">
            <img  src="/img/@Model.roomHouse.UrlImg" />
        </dd>
    </dl>
</div>
        @foreach(var x in @Model.imageUploadOfRooms){
            <img style="width:300px;height:120px;margin-bottom:100px;" src="/img/@x.Image" />
        }
<div>
    <a asp-action="EditRoom" asp-route-id="@Model.roomHouse.Id">Edit</a> |
</div>
